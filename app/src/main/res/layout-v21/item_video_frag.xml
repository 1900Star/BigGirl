<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="0.5dp"
              android:background="@color/colorWhite"
              android:gravity="center"
>


    <RelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp">


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:maxLines="2"

                android:textColor="@color/textName"
            />
            <TextView
                android:id="@+id/tv_video_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textDes"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/tv_video_time"
            android:background="@color/itemType"
            android:textColor="@color/textTime"

        />
        <TextView
            android:id="@+id/tv_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/textTime"
        />
    </RelativeLayout>

</LinearLayout>