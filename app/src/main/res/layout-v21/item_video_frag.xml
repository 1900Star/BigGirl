<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/itemBg"
                android:gravity="center"
>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp">
        <RelativeLayout

            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:minHeight="60dp"
        >


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_video_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"


                    android:textColor="@color/textName"
                />
                <TextView
                    android:id="@+id/tv_video_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"

                    android:textColor="@color/textDes"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_video_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/tv_video_time"
                android:background="@color/itemType"
                android:textColor="@color/textTime"

            />
            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/colorAccent"
                android:textColor="@color/textTime"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>