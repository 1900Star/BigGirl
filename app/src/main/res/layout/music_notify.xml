<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/notice"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="#fff"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_album"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/me"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="20"
                android:textColor="#37383D"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/widget_title"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="15"
                android:textColor="#A0A0A0"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/widget_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_marginRight="3dp"
                android:contentDescription="@null"
                android:src="@mipmap/icon_close"
            />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
        >

            <ImageView
                android:id="@+id/widget_prev"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@mipmap/notifycation_prev"
            />

            <ImageView
                android:id="@+id/widget_play"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@mipmap/notifycation_play"/>

            <ImageView
                android:id="@+id/widget_next"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@mipmap/notifycation_next"
            />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>