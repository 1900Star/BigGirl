<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/notice"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="#37383D"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_album"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@null" android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
    >
        <ImageView
            android:id="@+id/widget_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
        />
        <LinearLayout
            android:id="@+id/remote_top"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#ded6d6"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="#A0A0A0"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/remote_top"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/widget_prev"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
            />

            <ImageView

                android:id="@+id/widget_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/widget_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="centerInside"
            />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>